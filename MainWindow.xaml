<Window
	x:Class="SecurityDashboard.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:SecurityDashboard"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="MainWindow"
	Width="725"
	Height="450"
	MinWidth="400"
	MinHeight="250"
	Background="{DynamicResource MaterialDesignPaper}"
	BorderThickness="0"
	FontFamily="{DynamicResource MaterialDesignFont}"
	MouseDown="Window_MouseLeftButtonDown"
	MouseMove="PnMouseMove"
	MouseUp="Window_MouseUp"
	ResizeMode="CanResizeWithGrip"
	TextElement.Foreground="{DynamicResource MaterialDesignBody}"
	WindowStartupLocation="CenterScreen"
	WindowState="Normal"
	WindowStyle="None"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Name="MenuTab"
				Height="40"
				MaxHeight="40" />
			<RowDefinition Name="TreeView" Height="*" />
			<RowDefinition
				Name="ListView"
				Height="125"
				MinHeight="125"
				MaxHeight="250" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Height="{Binding ElementName=MenuTab, Path=Height}">
			<materialDesign:ColorZone
				Margin="8,4"
				HorizontalAlignment="Right"
				CornerRadius="10"
				Mode="Standard">
				<StackPanel FlowDirection="RightToLeft" Orientation="Horizontal">
					<Button
						Name="btn_Close"
						Width="55"
						Height="Auto"
						HorizontalAlignment="Right"
						Click="Btn_Exit_Click"
						Style="{StaticResource MaterialDesignFlatButton}"
						ToolTip="Close App">
						<materialDesign:PackIcon
							Width="{Binding ElementName=btn_Close, Path=ActualHeight}"
							Height="{Binding ElementName=btn_Close, Path=ActualHeight}"
							Margin="-5,0"
							VerticalAlignment="Center"
							Foreground="PaleVioletRed"
							Kind="Power" />
					</Button>

					<Button
						Name="btn_Maximize"
						Width="55"
						Height="Auto"
						HorizontalAlignment="Right"
						Click="btn_Maximize_Click"
						Style="{StaticResource MaterialDesignFlatButton}"
						ToolTip="Maximize Window">
						<materialDesign:PackIcon
							Width="{Binding ElementName=btn_Close, Path=ActualHeight}"
							Height="{Binding ElementName=btn_Close, Path=ActualHeight}"
							Margin="-5,0"
							VerticalAlignment="Center"
							Foreground="BlueViolet"
							Kind="WindowMaximize" />
					</Button>

					<Button
						Name="btn_Minimize"
						Width="55"
						Height="Auto"
						HorizontalAlignment="Right"
						Click="btn_Minimize_Click"
						Style="{StaticResource MaterialDesignFlatButton}"
						ToolTip="Minimize Window">
						<materialDesign:PackIcon
							Width="{Binding ElementName=btn_Close, Path=ActualHeight}"
							Height="{Binding ElementName=btn_Close, Path=ActualHeight}"
							Margin="-5,0"
							VerticalAlignment="Center"
							Foreground="BlueViolet"
							Kind="WindowMinimize" />
					</Button>
				</StackPanel>
			</materialDesign:ColorZone>
		</Grid>

		<Grid Grid.Row="1" Height="{Binding ElementName=MainWindow, Path=Height}">
			<materialDesign:ColorZone
				Margin="8,4"
				HorizontalAlignment="Right"
				CornerRadius="10"
				Mode="Standard">
				<StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
					
				</StackPanel>
			</materialDesign:ColorZone>
		</Grid>

	</Grid>
</Window>
